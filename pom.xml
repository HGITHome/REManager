	</dependency>
	<dependency>
	    <groupId>jmagick</groupId>
	    <artifactId>jmagick</artifactId>
	    <version>6.2.4</version>
	    <scope>provided</scope>
	</dependency>
	<!-- email -->
        <dependency>
		    <groupId>javax.mail</groupId>
		    <artifactId>mail</artifactId>
		    <version>1.4.7</version>
