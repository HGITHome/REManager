	    <junit-version>4.12</junit-version>
	    <slf4j-version>1.7.25</slf4j-version>
	    <springsecurity.version>4.0.1.RELEASE</springsecurity.version>  
	  </properties>
  
<dependencies>
    <!--Spring-->
    <dependency>
